<!-- views/home-user.handlebars -->

<div class="row mx-auto w-75 py-5">
    <div class="col-4">
        <ul class="list-group">
            {{#each nav}}
            <li class="list-group-item "> [{{math @index "+" 1}}] <a href="{{this.url}}"> {{this.name}} </a></li>
            {{/each}}
        </ul>
    </div>

    <div class="col-8">
        <div class="card">
            <div class="card-header">Application</div>

            <div class="card-body">
                <div class="accordion" id="accordionExample">
                    {{#each application}}
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading{{@index}}">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapse{{@index}}" aria-expanded="false"
                                aria-controls="collapse{{@index}}">
                                {{this.programName}}
                            </button>
                        </h2>
                        <div id="collapse{{@index}}" class="accordion-collapse collapse show"
                            aria-labelledby="heading{{@index}}" data-bs-parent="#accordionExample">
                            <div class="accordion-body">

                                <form action="delete-application/{{this._id}}" method="post">

                                    {{#each this}}
                                    {{#unless this._id}}
                                    <span class="list-group-item">
                                        {{ @key}} : {{this}}
                                    </span>
                                    {{/unless}}
                                    {{/each}}

                                    <button type="submit" class="my-3">
                                        Delete
                                    </button>

                                </form>

                            </div>
                        </div>
                    </div>
                    {{/each}}


                </div>

            </div>

        </div>
    </div>
</div>
</div>