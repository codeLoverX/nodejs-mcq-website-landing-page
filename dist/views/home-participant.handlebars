<!-- views/home-user.handlebars -->

<div class="row mx-auto w-75 py-5">
    <div class="col-4">
        <ul class="list-group">
            {{#each nav}}
            <li class="list-group-item "> [{{math @index "+" 1}}] <a href="{{this.url}}"> {{this.name}} </a></li>
            {{/each}}
        </ul>
    </div>

    <div class="col-8">
        <div class="card">
            <div class="card-header">Profile</div>

            <img src="https://images.ctfassets.net/hrltx12pl8hq/7yQR5uJhwEkRfjwMFJ7bUK/dc52a0913e8ff8b5c276177890eb0129/offset_comp_772626-opt.jpg?fit=fill&w=800&h=300"
                class="card-img-top" alt="...">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Details</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each user}}
                        <tr>
                            <td class="text-capitalize">{{ @key}} </td>
                            <td>{{this}} </td>
                        </tr>
                        {{/each}}
                    </tbody>
            </div>

        </div>
    </div>
</div>
</div>