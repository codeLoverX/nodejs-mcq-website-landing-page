<!-- views/layouts/main.handlebars -->

<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/bootstrap.min.css" />

  <title class="text-primary text-uppercase">
    GREEN LEAF SYSTEM
  </title>

  <!-- add icon link -->
  <link rel="icon" href="/images-bg-removed/logo-only.png" type="image/png">
  <style>
    {
        {
         !-- 1 .removes barrier between rows --
      }
    }

    .no-gutters {
      margin-right: 0;
      margin-left: 0;
    }

    .no-gutters>.col,
    .no-gutters>[class*="col-"] {
      padding-right: 0;
      padding-left: 0;
    }

      {
        {
         !-- 2. font-face --
      }
    }

    @font-face {
      font-family: 'Lora';
      src: url('/css/Lora-Regular.ttf');
    }

    body,
    main {
      font-family: 'Lora', arial, sans-serif;
      min-height: 100vh;
    }

      {
        {
         !-- 3. for making timelines --
      }
    }

    .timeline-line {
      /*
      border-width: 1px 0 0 0;
       border-color: rgb(17, 0, 0); 
      border-style: solid;
      */
      height: 30px !important;
      width: 270px;
      margin: 30px 200px -20px;
    }

    .timeline-circle {
      position: relative;
      top: -15px;
      left: 10px;
      margin-left: 10px;
      border-radius: 50% !important;
      border: 2px solid green !important;
      display: inline-block !important;
      height: 5px !important;
      padding: 5px;
    }

      {
        {
         !-- 4. For allowing clicks on icons --
      }
    }

    button>i,
    button>svg {
      pointer-events: none;
    }

      {
        {
         !-- 5. PTJ QUestion type --
      }
    }

    .question {
      margin-top: 10px;
    }

    .question::before {
      content: "Q: ";
      display: inline;
      font-style: italic;
      color: red;
      font-size: larger;
    }

    .question::after {
      content: " ? ";
      display: inline;
      font-style: italic;
      color: rgb(11, 168, 11);
      font-size: larger;
      font-weight: bold;
    }

    .answer {
      margin-top: 10px;

    }

    .answer::before,  .answer-2::before {
      content: " A: ";
      display: inline;
      font-style: italic;
      color: rgb(11, 168, 11);
      font-size: larger;
      font-weight: bold;
    }

    .answer>input,
    .answer>input:focus {
      max-width: 100%;
      width: 80%;
      border-width: 0 0 1px 0;
      background-color: inherit;
      text-align: center;
    }

      {
        {
         !-- 6. Custom list group --
      }
    }

    .list-group-item-sm {
      margin: 3px 0 !important;
      padding: 3px 20px !important;
      font-size: 95% !important;
    }

.list-group-item-sm-2 {
      margin: 3px 0 !important;
      padding: 20px 10px !important;
      font-size: 95% !important;
    }
      {
        {
         !-- 7. Custom down arrow icon --
      }
    }

    .down-arrow {
      display: inline-block;
      padding: 4px !important;
      border-width: 0 2px 2px 0;
      border-style: solid;
      transform: rotate(45deg);
      -webkit-transform: rotate(45deg);
    }

    .down-arrow:hover,
    .accordion-header:hover {
      color: #ffc107;
      font-size: larger;
    }

      {
        {
         !-- 8. Custom BS Color --
      }
    }

    .bg-gray-light {
      background-color: #fffbf2 !important
    }
  </style>
</head>

<body>


  {{{body}}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>