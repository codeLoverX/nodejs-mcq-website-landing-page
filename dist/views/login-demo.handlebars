{{> navbar }}

<main class="w-lg-50">
  <div class="col-12">
    {{#if warning}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      {{warning}}
      <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    {{/if}}
    {{#if success}}
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
      {{success}}
      <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    {{/if}}
  </div>
  <img class="d-block mx-auto my-5" src="/images-bg-removed/logo-only.png" alt="" width="107" height="88">
  <h5 class="text-center mx-auto">Please sign in</h5>
  <div class="row px-3">
    <div class="col-lg-3"></div>
    <div class="col-12 col-lg-6">
      <form action="/login" method="post" class="d-flex flex-column justify-content-center font-italic">
        <label class="mt-3 mx-auto"> Choose the usertype</label>
        <select name="usernameNoPassword" class="w-25 mx-auto" aria-label="Default select example" class="font-italic">
          <option value="shafayet" class="font-italic">@shafayet </option>
          <option value="monir" class="font-italic">@monir</option>
          <option value="johanna" class="font-italic">@johanna</option>
          <option value="wan" class="font-italic">@wan</option>
          <option value="atiqah" class="font-italic">@atiqah</option>
          <option value="ridwan" class="font-italic">@ridwan</option>
          <option value="hamidah" class="font-italic">@hamidah</option>
           <option value="afifah" class="font-italic">@afifah</option>
        </select>
        <button class="my-4 mx-auto rounded-pill btn text-white btn-primary" type="submit">Submit</button>
      </form>
    </div>
    <div class="col-lg-3"></div>
  </div>
</main>

{{> footer }}