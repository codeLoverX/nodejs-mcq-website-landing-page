<!-- views/login.handlebars -->

<div class="row mx-auto w-75 p-5">

{{#if warning}}
    <div class="alert alert-danger w-75 mx-auto" role="alert">
        {{warning}}
    </div>
{{/if}}

{{#if success}}
    <div class="alert alert-success w-75 mx-auto" role="alert">
        {{success}}
    </div>
{{/if}}

  <h3> Choose a user </h3>
  <form action="/" method="post">
    <select name="usertype" class="form-select" aria-label="Default select example">
      <option value="participant1">Participant 1</option>
      <option value="participant2">Participant 2</option>
      <option value="organizer">Organizer</option>
      <option value="judge">Judge</option>
    </select>
    <button class="my-3" type="submit">Submit</button>
  </form>
  <hr class="my-5">
  <h3> ... Or login </h3>

  <form action="/" method="post">

    <div class="form-group">
      <label for="username">Username</label>
      <input name="username" class="form-control" placeholder="Write your username..." />
    </div>
    <div class="form-group">
      <label for="password">Passwprd</label>
      <input name="password" type="" class="form-control" placeholder="Enter a password."></input>
    </div>
    <button class="my-3" type="submit">Submit</button>
  </form>
</div>