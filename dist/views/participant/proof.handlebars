<!-- views/home-user.handlebars -->
{{> navbar-after-login }}
<div class="row justify-content-between no-gutters">
    {{> drawer }}

    <div class="col-12 col-lg-9">

        <div class="card border pt-5">
            <div class="row">
                <div class="col-1">
                </div>
                <div class="card-header border border-primary col-10 col-lg-6">
                    <h5>

                        <h5>Proof of submitting application</h5>

                    </h5>
                </div>
                <div class="col-1"></div>
            </div>
            <div class="row">
                <div class="col-1">
                </div>
                <div class="col-10 col-lg-6 p-0">
                </div>
                <div class="col-1"></div>
            </div>
            <div class="row">
                <div class="col-1">
                </div>
                <div class="col-10 col-lg-6 pt-3 border border-primary pb-3 mb-5">

                    {{#if warning}}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{warning}}
                        <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    {{/if}}



                    {{#if application}}

                    {{#if proof}}
                    <div class="d-flex flex-column justify-content-center">
                        <p class="mx-auto">Uploaded proof</p>
                        <img src="{{{proof}}}" class="mx-auto" alt="Proof" width="300" height="300">
                    </div>
                    {{else}}
                    <form action="/upload-proof/{{application._id}}" method="post" enctype="multipart/form-data">
                        <div>
                            <label>Upload proof of your submission by taking screenshot</label>
                            <input class="btn btn-pill px-0" type="file" id="formFile" name="inputFile">
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary">Submit</button>

                    </form>
                    {{/if}}

                    {{/if}}

                </div>
                <div class="col-1 col-lg-6"></div>
                <script>

                </script>
            </div>
        </div>
    </div>
</div>